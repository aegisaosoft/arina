{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Server: Dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Server running on port"
        }
      }
    },
    {
      "label": "Client: Dev",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "Local:.*localhost"
        }
      }
    },
    {
      "label": "Dev: Full Stack",
      "dependsOn": ["Server: Dev", "Client: Dev"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Install: All",
      "type": "shell",
      "command": "cd server && npm install && cd ../client && npm install",
      "problemMatcher": []
    },
    {
      "label": "Build: Client",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "problemMatcher": []
    }
  ]
}
